<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="net.vidainc.vidahome"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Vida">
        <activity
            android:name="net.vidainc.vidahome.frontend.activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".frontend.activities.DetailActivity"/>

        <service
            android:name="net.vidainc.vidahome.service.BeaconService"
            android:enabled="true"
            android:exported="true">
        </service>
    </application>

</manifest>
